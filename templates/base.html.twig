<!DOCTYPE html>
<html lang="es">

	<head>

		<meta charset="utf-8"/>

		<title>
			{% block title %}
				Mapa Académico
			{% endblock %}
		</title>

		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta content="Mapa Académico" name="description"/>
		<meta content="Universidad de Buenos Aires" name="author"/>

		{% block stylesheets %}
			<!-- Favicon -->
			<link
			rel="shortcut icon" href="{{ asset('assets/images/logo_uba_negro_cuadrado.png') }}">
			<!-- Bootstrap css -->
			<link
			href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>

			<!-- datatables css -->
			<link
			rel="stylesheet" href="{{ asset('assets/css/datatables.min.css') }}" type="text/css"/>


			<!-- icons bootstrap css -->

			<link
			href="{{ asset('assets/css/bootstrap-icons/font/bootstrap-icons.css') }}" rel="stylesheet">
			<!-- custom style css -->
			<link
			rel="stylesheet" href="{{ asset('assets/css/uba.css') }}" type="text/css"/>

			<!-- Custom Css-->
			{% if files_css is defined %}

				{% for file_css in files_css %}
					<link href="{{ asset('assets/css/'~ file_css) }}" rel="stylesheet" type="text/css"/>
				{% endfor %}

			{% endif %}

		{% endblock %}
	</head>

	<body class="pb-5">
		{% block body %}{% endblock %}

		{% block javascripts %}

			<script>
				var SITE_URL = "{{ url('app_home') }}";
			</script>

			<!-- JAVASCRIPT -->
			<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
			<script src="{{ asset('assets/js/pdfmake.min.js') }}"></script>
			<script src="{{ asset('assets/js/vfs_fonts.min.js') }}"></script>
			<script src="{{ asset('assets/js/datatables.min.js') }}"></script>
			{# custom js #}
			{% if files_js is defined %}

				{% for file_js in files_js %}
					<script src="{{ asset('assets/js/'~ file_js) }}"></script>
				{% endfor %}

			{% endif %}

			{# <script src="{{ asset('assets/js/.js') }}"></script> #}

		{% endblock %}

	</body>

</html>
