{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}


	<div id="login-body" class="d-flex align-items-center py-4 bg-body-tertiary">

		<main class="form-signin w-100 m-auto">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<img class="mb-4 img-fluid" src="{{ asset('assets/images/logo_uba_azul.png') }}" alt="Logo Universidad de Buenos Aires">
				<div class="form-floating">
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					<label for="inputEmail">Correo</label>
				</div>

				<div class="form-floating">
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
					<label for="inputPassword">Contraseña</label>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn btn-uba w-100 py-2" type="submit">Iniciar sesión</button>
			</form>
		</main>

	</div>
{% endblock %}
